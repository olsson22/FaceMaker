<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="14"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/radioButtonHair"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hair" />

                <RadioButton
                    android:id="@+id/radioButtonSkin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Skin" />

                <RadioButton
                    android:id="@+id/radioButtonEyes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Eyes" />
            </RadioGroup>

            <Button
                android:id="@+id/buttonRandom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Randomize" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewGrenn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" How much Green you want?" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="5sp" />

            <SeekBar
                android:id="@+id/seekBarGreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="255" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="5sp" />

            <TextView
                android:id="@+id/textViewRed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" How much Red you want?" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="5sp" />

            <SeekBar
                android:id="@+id/seekBarRed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="255" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="5sp" />

            <TextView
                android:id="@+id/textViewBlue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How much blue you want?" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="5sp" />

            <SeekBar
                android:id="@+id/seekBarBlue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="5sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00FFFFFF"
        android:orientation="horizontal">

        <com.example.facemaker.Face
            android:id="@+id/theSurfaceView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00FEFFFE" />
    </LinearLayout>

</LinearLayout>